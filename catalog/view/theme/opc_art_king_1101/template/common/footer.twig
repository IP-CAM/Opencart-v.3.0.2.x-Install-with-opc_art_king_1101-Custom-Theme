<footer id="footer">	 
		<!-- quick view -->
		<!-- Trigger the modal with a button -->
		<!-- quick view modal -->
		<div id="quickviewdata" class="modal fade quickview" role="dialog">
			<div class="modal-dialog">
				<div class="modal-content">
				<div class="modal-body"></div>
					<button type="button" class="close ttvquickview-close-btn" data-dismiss="modal">&times;</button>
				</div>
			</div>
		</div>
		<!-- quick view modal -->
		<div class="footer-container">
			<div class="container ttvfooter-logo-link-wrapper">
				<div class="">
					<div class="ttvfooter-column-wrapper clearfix">		
						<div class="ttvfooter-storelogo-imformation">
							{{ footerlogo }}
							<div id="block_myaccount_infos" class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12">
								<div class="ttvfooter-title-wrapper" data-target="#footer_sub_menu_myaccount" data-toggle="collapse">
									{% if text_information %}<span class="ttvfooter-title">{{ text_information }}</span>{% endif %}
									<span class="float-xs-right ttvfooter-toggle-icon-wrapper">
											<span class="navbar-toggler collapse-icons ttvfooter-toggle-icon">
												<i class="fa fa-angle-down add" aria-hidden="true"></i>
												<i class="fa fa-angle-up remove" aria-hidden="true"></i>
											</span>
									</span>
								</div>
								{% if informations %}
								<ul id="footer_sub_menu_myaccount" class="collapse account-list">
									{% for information in informations %}
									<li>
										<a class="cms-page-link" href="{{ information.href }}" title="Our terms and conditions of delivery">
													{{ information.title }}
												</a>
									</li>
									{% endfor %}
									<li>
										<a href="{{ special }}">{{ text_special }}</a>
									</li>
									<li>
										<a href="{{ contact }}">{{ text_contact }}</a>
									</li>
									<li>
										<a href="{{ sitemap }}">{{ text_sitemap }}</a>
									</li>
									<li><a href="{{ manufacturer }}">{{ text_manufacturer }}</a></li>								
								</ul>
								{% endif %}
							</div>			                    
							{{ socialicon }}
							
							{{ newsletterdata }}
							<div class="ttvcmsfooter-store-time-wrapper">
		                        <div class="links wrapper" >
		                            <div class="">
			                            {% if text_footer_help %}		                            	
			                             	<div class="ttvfooter-title-wrapper" data-target="#footer_sub_menu_store_info" data-toggle="collapse">
			                             		<span class="ttvfooter-store-title ttvfooter-title">{{ text_footer_help }}</span>
			                             		<span class="float-xs-right ttvfooter-toggle-icon-wrapper">
			                             			<span class="navbar-toggler collapse-icons ttvfooter-toggle-icon">
			                             				<i class="fa fa-angle-down add" aria-hidden="true"></i>
			                             				<i class="fa fa-angle-up remove" aria-hidden="true"></i>
													</span>
												</span>
											</div>
										{% endif %}

		                                <div id="footer_sub_menu_store_info" class="collapse">
		                                    <div class="ttv-contact-info-text">
		                                        <div class="ttvfooter-store-link">
												<br>{{ address }}</div>
		                                    </div>
		                                    <div class="ttvfooter-store-link"> <span class="ttvcontact-label">{{ text_phone }}</span> <span>{{ telephone }}</span></div>
		                                    <div class="ttvfooter-store-link"> <span class="ttvcontact-label">{{ text_fax }}</span> <span>{{ fax }}</span></div>
		                                    <div class="ttvfooter-store-link">
											<span class="ttvcontact-label">{{ text_email }}</span> <a href="{{ email }}" class="dropdown">{{ email }}</a></div>		
		                                </div>
		                            </div>
		                        </div>
		                        
				            </div>
				        </div>
				        {% if text_gotop %}<div class="ttvbottom-to-top"><a href="javascript:" class="ttvbottom-to-top-icon"><span>{{ text_gotop }}</span><i class="fa fa-angle-double-up" aria-hidden="true"></i></a></div>{% endif %}
		   			</div>
		   			{% if customsetting_status %}
					<div class="ttvfooter-copy-payment-icon-wrapper">
						<div class="container ttvfooter-copy-payment-icon-content">
							<div class="row">
								<div class="ttvcopylink col-xl-6 col-md-6 col-sm-12">
									<a href="{% if customsetting_customtextlink %}{{ customsetting_customtextlink }}{% endif %}">
										<p>{% if customsetting_customtext %}{{ customsetting_customtext }}{% endif %}</p>
									</a>
								</div>
								<div class="col-xl-6 col-md-6 col-sm-12">
									{{ paymenticon }}
								</div>
							</div>
						</div>
					</div>
					{% endif %}					
					</div>				
			</div>
			
		</div>
</footer>
</div>
<div class="ttvcms-custom-theme"></div>

{% if tvcmscustomsetting_theme_css_path %}
	<link href="catalog/view/theme/opc_art_king_1101/assets/css/{{ tvcmscustomsetting_theme_css_path }}" rel="stylesheet" />
{% endif %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
